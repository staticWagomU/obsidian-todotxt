{
  "$schema": "./node_modules/oxlint/configuration_schema.json",
  "plugins": ["typescript"],
  "categories": {
    "correctness": "error",
    "suspicious": "warn",
    "pedantic": "off",
    "perf": "warn",
    "style": "off"
  },
  "rules": {
    "no-unused-vars": "warn",
    "no-console": "warn",
    "typescript/no-explicit-any": "warn"
  },
  "ignorePatterns": [
    "node_modules",
    "dist",
    "main.js",
    "esbuild.config.mjs",
    "version-bump.mjs",
    "refferencies"
  ]
}
